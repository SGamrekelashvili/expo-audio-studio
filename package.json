{
  "name": "expo-audio-studio",
  "version": "1.2.2",
  "description": "Professional audio recording & playback with advanced Voice Activity Detection for React Native",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "lint": "expo-module lint",
    "prepare": "expo-module prepare",
    "prepublishOnly": "expo-module prepublishOnly",
    "expo-module": "expo-module",
    "open:ios": "open -a \"Xcode\" example/ios",
    "open:android": "open -a \"Android Studio\" example/android",
    "changeset": "changeset",
    "release": "npm run prepare && changeset publish",
    "ts:check": "tsc -p . --noEmit",
    "semantic-release": "semantic-release --branches main"
  },
  "keywords": [
    "react-native",
    "expo",
    "audio",
    "recording",
    "playback",
    "voice-activity-detection",
    "vad",
    "speech-detection",
    "audio-processing",
    "expo-audio-studio",
    "typescript",
    "voice-detection",
    "react-native-vad"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SGamrekelashvili/expo-audio-studio.git"
  },
  "bugs": {
    "url": "https://github.com/SGamrekelashvili/expo-audio-studio/issues"
  },
  "author": "Sandro <sgamrekelashvili@gmail.com> (SGamrekelashvili)",
  "license": "MIT",
  "homepage": "https://github.com/SGamrekelashvili/expo-audio-studio#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@expo/config-plugins": "^9.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.1",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "expo": "^54.0.18",
    "expo-module-scripts": "^5.0.7",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react-native": "0.81.5",
    "semantic-release": "^25.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": "*"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
